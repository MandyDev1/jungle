<!-- app/views/admin/dashboard/show.html.erb -->
<section class="dashboard">
  <h1 class="display-4 mb-4">Admin Dashboard</h1>

  <div class="row">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title">Products</h2>
          <p class="card-text"><%= @product_count %> products</p>
          <%= link_to 'View Products', admin_products_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title">Categories</h2>
          <p class="card-text"><%= @category_count %> categories</p>
          <%= link_to 'View Categories', admin_categories_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
</section>
